@page
@model OTSSite.Pages.Publish.SubmitArticleModel
@{
    ViewData["Title"] = "SubmitArticle";
}
<h3>Submit Article</h3>

<form method="post" enctype="multipart/form-data" asp-controller="UploadFiles" asp-action="Index">
    <div class="form-group">
        <div class="col-md-10">
            <label>Title</label>
            <input type="text" name="Title" />
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-10">
            <label>Topic</label>
            <input type="text" name="Topic" />
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-10">
            <label>Article File</label>
            <input type="file" name="Article" />
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-10">
            <input type="submit" value="Upload" />
        </div>
    </div>
</form>

