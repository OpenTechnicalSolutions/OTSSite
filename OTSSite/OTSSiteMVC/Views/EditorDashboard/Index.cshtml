@model  System.Collections.Generic.IEnumerable<OTSSiteMVC.Models.ArticleInfoDto>
@{
    ViewData["Title"] = "Index";
}
<nav class="nav navbar">
    <ul class="navbar-nav">
        <li class="nav-item nav-link"><a asp-action="Index" asp-route-status="0">Pending Articles</a></li>
        <li class="nav-item nav-link"><a asp-action="Index" asp-route-status="1">Published Articles</a></li>
        <li class="nav-item nav-link"><a asp-action="Index" asp-route-status="2">Declined Articles</a></li>
    </ul>
</nav>
@foreach(var a in Model)
{
    <div>
        <div>@a.Title</div>
        <div>@a.AuthorUserName</div>
        <div>@a.Topic</div>
    </div>
}

